{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/HarrisHanif/HarrisHanif.github.io/main/data_ONS-G7ER.json",
    "format": {"type": "json", "property": "years"}
  },
  
 "background":"rgb(209,209,214)", 
  
  "title": {
    "text": "Construction",
    "subtitle": "in thousands: Source: ONS",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  
  "width": 200,
  "height": 200,
  "mark": {"type": "line", "color": "rgb(0,122,255"},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {"grid": false},
      "title": "Year"
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {"grid": false},
      "title": "Employment"
    }
  }
}