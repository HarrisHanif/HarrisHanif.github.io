{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "description": "SPX 1Y)",
  
   "title": {
    "text": "S&P500 (SPX) Candlestick Chart",
    "subtitle": "Daily SPX candlestick in USD. Source: NASDAQ",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
 
 
  "data": {"url": "https://raw.githubusercontent.com/HarrisHanif/HarrisHanif.github.io/main/SPX1y.csv"},
  
  
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": "Date",
      "axis": {
        "format": "%d/%m",
        "labelAngle": -45,
        "title": "Date"
      }
    },
    "y": {
      "type": "quantitative",
      "scale": {"zero": false},
      "axis": {"title": "Price"}
    },
    "color": {
      "condition": {
        "test": "datum.open < datum.close",
        "value": "#06982d"
      },
      "value": "#ae1325"
    }
  },
  "layer": [
    {
      "mark": "rule",
      "encoding": {
        "y": {"field": "low"},
        "y2": {"field": "high"}
      }
    },
    {
      "mark": "bar",
      "encoding": {
        "y": {"field": "open"},
        "y2": {"field": "close"},
    "tooltip": [
          {"field": "date", "type": "temporal", "title": "Date"},
          {"field": "open", "type": "quantitative", "title": "Open"},
          {"field": "high", "type": "quantitative", "title": "High"},
          {"field": "open", "type": "quantitative", "title": "Open"},
          {"field": "low", "type": "quantitative", "title": "Low"},
          {"field": "close", "type": "quantitative", "title": "Close"}
        ]
      }
    }
  ]
}