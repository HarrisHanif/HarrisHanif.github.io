{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
      "text": "Total IMF Lending as a Percentage of Global GDP",
      "subtitle":"Credit outstanding to all members 1984-2022 (billions), Source: IMF, World Bank",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"},
  
  "data":{"url": "https://raw.githubusercontent.com/HarrisHanif/HarrisHanif.github.io/main/IMF%20Lending%20Original.csv"},

 "transform": [{"calculate": "datum.Totals/1000000000", "as": "billions"}],
  
  "height": 300,
  "width": 260,

  "mark": {
    "type": "bar",
    "color": "#002FA7"},

"encoding": {
     "x": {
       "field": "Year",
       "type": "temporal",
       "axis": {
         "title": "Year",
         "grid": false,
         "ticks": false,
         "labelAngle": 45}},

      "y": {
        "field": "Totals/GDP",
        "type": "quantitative",
        "title": "Percentage",
        "axis": {"grid": false}}
}
}